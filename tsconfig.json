{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "plugins": [],
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "jest.config.cjs", "src/setupTests.ts", "src/tests", "src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
