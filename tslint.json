{
  "extends": ["dcl-tslint-config-standard", "tslint-plugin-prettier"],
  "rules": {
    "no-commented-out-code": false,
    "jsx-no-multiline-js": false,
    "ban-types": [true, "Number", "Boolean", "String", "Object"],
    "prettier": [
      true,
      { "printWidth": 80, "singleQuote": true, "semi": false }
    ],
    "quotemark": [true, "single", "jsx-double"],
    "jsx-boolean-value": [false],
    "strict-type-predicates": false,
    "ter-indent": false
  },
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts", "./**/*.js"]
  }
}
